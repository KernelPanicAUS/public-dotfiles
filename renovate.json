{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "enabledManagers": [
    "nix",
    "pre-commit",
    "github-actions"
  ],
  "nix": {
    "enabled": true,
    "automerge": true,
    "fileMatch": ["^flake\\.lock$"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:weekly"]
  },
  "regexManagers": [
    {
      "fileMatch": ["^flake\\.lock$"],
      "matchStrings": [".*"],
      "datasourceTemplate": "git-tags",
      "depNameTemplate": "flake-lock-maintenance"
    }
  ],
  "pre-commit": {
    "enabled": true,
    "automerge": true
  },
  "github-actions": {
    "enabled": true,
    "pinDigests": true,
    "automerge": true
  }
}
