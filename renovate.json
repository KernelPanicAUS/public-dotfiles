{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "enabledManagers": [
    "nix",
    "pre-commit",
    "github-actions"
  ],
  "nix": {
    "enabled": true,
    "automerge": true,
    "fileMatch": ["^flake\\.lock$"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:weekly"]
  },
  "packageRules": [
    {
      "matchManagers": ["nix"],
      "enabled": true,
      "lockFileMaintenance": {
        "enabled": true
      }
    }
  ],
  "pre-commit": {
    "enabled": true,
    "automerge": true
  },
  "github-actions": {
    "enabled": true,
    "pinDigests": true,
    "automerge": true
  }
}
